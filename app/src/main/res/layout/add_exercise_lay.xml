<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_sans"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        android:textColor="#000"
        android:text="Enter Exercise" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="10dp">

        <EditText
            android:id="@+id/exerciseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_edittext"
            android:hint="Bicep Curls"
            android:textColorHint="#a9a9a9"
            android:textColor="#272626"
            android:padding="20dp"
            android:inputType="textNoSuggestions"
            android:singleLine="true"
            android:textSize="15sp"
            android:fontFamily="@font/nunito_sans"
            android:lineSpacingExtra="5.3sp"
            />

        <EditText
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/middle_edittext"
            android:hint="Weight in Kilograms"
            android:textColorHint="#a9a9a9"
            android:layout_marginTop="-2dp"
            android:textColor="#272626"
            android:padding="20dp"
            android:inputType="number"
            android:maxLength="3"
            android:singleLine="true"
            android:textSize="15sp"
            android:fontFamily="@font/nunito_sans"
            android:lineSpacingExtra="5.3sp"
            />

        <EditText
            android:id="@+id/sets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/middle_edittext"
            android:hint="Number of Sets"
            android:textColorHint="#a9a9a9"
            android:layout_marginTop="-2dp"
            android:textColor="#272626"
            android:padding="20dp"
            android:inputType="number"
            android:maxLength="3"
            android:singleLine="true"
            android:textSize="15sp"
            android:fontFamily="@font/nunito_sans"
            android:lineSpacingExtra="5.3sp"
            />

        <EditText
            android:id="@+id/reps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/middle_edittext"
            android:hint="Number of Reps"
            android:textColorHint="#a9a9a9"
            android:layout_marginTop="-2dp"
            android:textColor="#272626"
            android:padding="20dp"
            android:inputType="number"
            android:maxLength="3"
            android:singleLine="true"
            android:textSize="15sp"
            android:fontFamily="@font/nunito_sans"
            android:lineSpacingExtra="5.3sp"
            />

        <EditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_edittext"
            android:hint="Comment"
            android:textColorHint="#a9a9a9"
            android:layout_marginTop="-2dp"
            android:textColor="#272626"
            android:padding="20dp"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:maxLines="3"
            android:textSize="15sp"
            android:fontFamily="@font/nunito_sans"
            android:lineSpacingExtra="5.3sp"
            />

        <TextView
            android:id="@+id/forgotPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:textColor="#FF9800"
            android:textStyle="bold"
            android:text="@string/note_all_fields_are_mandatory" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_filled_back"
        android:layout_margin="20dp"
        android:elevation="3dp"
        android:padding="18dp"
        android:id="@+id/createSession">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_exercise"
            android:textColor="#fff"
            android:fontFamily="@font/nunito_sans"
            android:textSize="20sp"
            android:drawablePadding="7dp"
            app:drawableEndCompat="@drawable/ic_right_arrow" />

    </RelativeLayout>

</LinearLayout>